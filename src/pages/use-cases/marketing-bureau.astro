---
import Layout from '../../layouts/Layout.astro';
import ScailUpFooter from '../../components/active/shared/ScailUpFooter';
import HomeHero from '../../components/active/agency/HomeHero';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "AI Automatisering voor Marketing Bureaus - Buildrs",
  "description": "Ontdek hoe marketing bureaus hun workflows automatiseren met AI agents. Van leadgeneratie tot client reporting - schaal je bureau met slimme automatisering.",
  "url": "https://buildrs.nl/use-cases/marketing-bureau"
};
---

<Layout 
  title="AI Automatisering voor Marketing Bureaus | Buildrs"
  description="Ontdek hoe marketing bureaus hun workflows automatiseren met AI agents. Van leadgeneratie tot client reporting - schaal je bureau met slimme automatisering."
  keywords="marketing bureau automatisering, AI marketing agents, bureau workflows, leadgeneratie automatisering, client reporting AI, marketing bureau schalen"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <main class="min-h-screen bg-black">
    
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-black via-gray-900 to-black overflow-hidden">
      
      <!-- Background Effects -->
      <div class="absolute inset-0 opacity-20">
        <div class="absolute top-1/4 left-1/6 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-pulse" style={{ animationDuration: '8s' }} />
        <div class="absolute bottom-1/4 right-1/6 w-80 h-80 bg-purple-500/15 rounded-full blur-3xl animate-pulse" style={{ animationDuration: '12s', animationDelay: '2s' }} />
      </div>
      
      <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
        <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500/20 to-purple-500/20 border border-blue-500/30 rounded-full mb-8 backdrop-blur-sm">
          <span class="text-blue-300 text-sm font-medium">Use Case: Marketing Bureaus</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-light text-white mb-8 leading-tight tracking-[-0.02em]" style={{ fontFamily: 'SF Pro Display, -apple-system, BlinkMacSystemFont, system-ui, sans-serif' }}>
          Schaal je <span class="bg-gradient-to-r from-blue-400 via-purple-500 to-pink-400 bg-clip-text text-transparent font-medium">Marketing Bureau</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-300 font-light leading-relaxed mb-12 max-w-4xl mx-auto">
          Van leadgeneratie tot client reporting - automatiseer je workflows en focus op strategie en groei
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-full hover:scale-[1.02] active:scale-[0.98] transition-all duration-300 text-lg">
            Bekijk Marketing Solutions
          </button>
          <button class="inline-flex items-center px-8 py-4 text-white font-medium rounded-full border border-white/20 hover:border-white/40 backdrop-blur-sm hover:bg-white/10 transition-all duration-300">
            Download Use Case
          </button>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-20 bg-black">
      <div class="max-w-6xl mx-auto px-6">
        
        <!-- Problem Statement -->
        <div class="mb-20">
          <h2 class="text-3xl md:text-4xl font-light text-white mb-8 text-center">De Uitdagingen van Marketing Bureaus</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-gradient-to-br from-red-900/20 to-red-800/10 border border-red-500/20 rounded-2xl p-6 backdrop-blur-sm">
              <h3 class="text-xl font-semibold text-red-400 mb-4">Handmatige Leadgeneratie</h3>
              <p class="text-gray-300">Uren besteed aan prospecting, research en outreach die geschaald kunnen worden</p>
            </div>
            <div class="bg-gradient-to-br from-red-900/20 to-red-800/10 border border-red-500/20 rounded-2xl p-6 backdrop-blur-sm">
              <h3 class="text-xl font-semibold text-red-400 mb-4">Repetitieve Client Work</h3>
              <p class="text-gray-300">Steeds dezelfde rapportages, analyses en updates die tijd kosten</p>
            </div>
            <div class="bg-gradient-to-br from-red-900/20 to-red-800/10 border border-red-500/20 rounded-2xl p-6 backdrop-blur-sm">
              <h3 class="text-xl font-semibold text-red-400 mb-4">Schaalbaarheidsproblemen</h3>
              <p class="text-gray-300">Moeilijk om te groeien zonder evenredig meer mensen aan te nemen</p>
            </div>
          </div>
        </div>

        <!-- Solutions -->
        <div class="mb-20">
          <h2 class="text-3xl md:text-4xl font-light text-white mb-8 text-center">AI Oplossingen voor Marketing Bureaus</h2>
          <div class="space-y-12">
            
            <div class="flex flex-col lg:flex-row items-center gap-12">
              <div class="lg:w-1/2">
                <h3 class="text-2xl font-semibold text-blue-400 mb-4">Automatische Leadgeneratie</h3>
                <p class="text-gray-300 mb-6">AI agents die 24/7 prospects identificeren, research doen en eerste contact leggen</p>
                <ul class="space-y-2 text-gray-300">
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Geautomatiseerde prospecting op LinkedIn</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Company research en personalisatie</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Follow-up sequences</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Lead scoring en kwalificatie</li>
                </ul>
              </div>
              <div class="lg:w-1/2 bg-gradient-to-br from-blue-900/20 to-purple-900/20 border border-blue-500/20 rounded-2xl p-6 backdrop-blur-sm">
                <div class="text-center">
                  <div class="text-4xl font-bold text-blue-400">150+</div>
                  <div class="text-gray-300">Qualified leads per maand</div>
                </div>
              </div>
            </div>

            <div class="flex flex-col lg:flex-row-reverse items-center gap-12">
              <div class="lg:w-1/2">
                <h3 class="text-2xl font-semibold text-purple-400 mb-4">Client Reporting Automatisering</h3>
                <p class="text-gray-300 mb-6">Automatische dashboards en rapportages die altijd up-to-date zijn</p>
                <ul class="space-y-2 text-gray-300">
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Real-time performance dashboards</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Automatische maandrapportages</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Data uit alle marketing kanalen</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> White-label branding</li>
                </ul>
              </div>
              <div class="lg:w-1/2 bg-gradient-to-br from-purple-900/20 to-pink-900/20 border border-purple-500/20 rounded-2xl p-6 backdrop-blur-sm">
                <div class="text-center">
                  <div class="text-4xl font-bold text-purple-400">80%</div>
                  <div class="text-gray-300">Tijdsbesparing op rapportage</div>
                </div>
              </div>
            </div>

            <div class="flex flex-col lg:flex-row items-center gap-12">
              <div class="lg:w-1/2">
                <h3 class="text-2xl font-semibold text-green-400 mb-4">Content & Campaign Automatisering</h3>
                <p class="text-gray-300 mb-6">AI assistentie bij content creatie en campaign optimalisatie</p>
                <ul class="space-y-2 text-gray-300">
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Content ideation en planning</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> A/B test automatisering</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Performance monitoring</li>
                  <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> Budget optimalisatie</li>
                </ul>
              </div>
              <div class="lg:w-1/2 bg-gradient-to-br from-green-900/20 to-blue-900/20 border border-green-500/20 rounded-2xl p-6 backdrop-blur-sm">
                <div class="text-center">
                  <div class="text-4xl font-bold text-green-400">3x</div>
                  <div class="text-gray-300">Sneller campaigns lanceren</div>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- ROI Section -->
        <div class="text-center bg-gradient-to-br from-blue-900/10 to-purple-900/10 border border-blue-500/20 rounded-3xl p-12 backdrop-blur-sm">
          <h2 class="text-3xl md:text-4xl font-light text-white mb-8">Return on Investment</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <div class="text-4xl font-bold text-blue-400 mb-2">€25K+</div>
              <div class="text-gray-300">Maandelijkse tijdsbesparing</div>
            </div>
            <div>
              <div class="text-4xl font-bold text-purple-400 mb-2">200%</div>
              <div class="text-gray-300">Meer leads zonder extra team</div>
            </div>
            <div>
              <div class="text-4xl font-bold text-green-400 mb-2">6 mnd</div>
              <div class="text-gray-300">Terugverdientijd investering</div>
            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-black via-blue-900/10 to-black">
      <div class="max-w-4xl mx-auto text-center px-6">
        <h2 class="text-3xl md:text-4xl font-light text-white mb-6">Klaar om je bureau te schalen?</h2>
        <p class="text-xl text-gray-300 mb-8">Ontdek hoe andere marketing bureaus hun workflows hebben geautomatiseerd</p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-full hover:scale-[1.02] transition-all duration-300">
            Plan een Demo
          </button>
          <button class="inline-flex items-center px-8 py-4 text-white font-medium rounded-full border border-white/20 hover:border-white/40 backdrop-blur-sm hover:bg-white/10 transition-all duration-300">
            Download Case Study
          </button>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <ScailUpFooter client:visible />
  </main>

</Layout>