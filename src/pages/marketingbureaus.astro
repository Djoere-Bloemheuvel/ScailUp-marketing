---
import Layout from '../layouts/Layout.astro';
import MarketingBureauHero from '../components/active/usecase/MarketingBureauHero';
import MarketingBureauServicesSection from '../components/active/usecase/MarketingBureauServicesSection';
import MarketingBureauFinalCTA from '../components/active/usecase/MarketingBureauFinalCTA';
import LeadForm from '../components/LeadForm.astro';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';

// Structured data for marketing bureau page
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Lead Generatie voor Marketing Bureaus",
  "description": "Schaalt jouw marketingbureau naar 400% meer gekwalificeerde leads met geautomatiseerde email outbound en LinkedIn automation.",
  "provider": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.ai"
  },
  "serviceType": "Lead Generation Automation",
  "areaServed": "Netherlands",
  "audience": {
    "@type": "Audience",
    "audienceType": "Marketing Agencies"
  }
};
---

<Layout 
  title="Marketing Bureau Lead Generatie | Buildrs - 400% Meer Leads"
  description="Schaalt jouw marketingbureau naar 400% meer gekwalificeerde leads. Email outbound automation, LinkedIn lead generatie en AI agents voor marketing bureaus."
  keywords="marketing bureau lead generatie, email automation marketing, LinkedIn automation bureau, lead generation tools, marketing automation Netherlands"
  structuredData={structuredData}
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <main class="min-h-screen bg-black text-white" style="background-color: #000000 !important;">
    <!-- Instant loading state -->
    <div class="fixed inset-0 bg-black z-0" style="background-color: #000000 !important;"></div>
    
    <!-- Hero Section - prioritize loading -->
    <MarketingBureauHero client:load />
    
    <!-- Services Section - load when visible to reduce initial load -->
    <MarketingBureauServicesSection client:visible />
    
    <!-- Premium Lead Form Section -->
    <LeadForm 
      formTitle="Klaar voor 2-4x meer leads?"
      formDescription="Vul je gegevens in en ontdek hoe we jouw bureau kunnen helpen groeien met geautomatiseerde lead generatie."
      submitText="Laten we praten"
    />
    
    <!-- Footer -->
    <ScailUpFooter client:idle />
  </main>
</Layout>