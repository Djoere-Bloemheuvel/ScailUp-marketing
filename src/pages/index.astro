---
import Layout from '../layouts/Layout.astro';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';
import HomeHero from '../components/active/agency/HomeHero';
import DienstenSection from '../components/active/agency/DienstenSection';
import PlatformSection from '../components/active/agency/PlatformSection';
import UseCaseSection from '../components/active/agency/UseCaseSection';
import FoundersSection from '../components/active/agency/CEOSection';
import AIAgentsSection from '../components/active/agency/AIAgentsSection';
import WhatIsBuildrsSection from '../components/active/agency/WhatIsBuildrsSection';
import PlatformComparisonSection from '../components/active/agency/PlatformComparisonSection';
import HomeFAQSection from '../components/active/agency/HomeFAQSection';
import FeaturesSection from '../components/active/agency/FeaturesSection';
import AppleStyleTransition from '../components/active/agency/AppleStyleTransition';
import ProcessSection from '../components/active/agency/ProcessSection';
import HomeFinalCTASection from '../components/active/agency/HomeFinalCTASection';

// Main landing page structured data (moved from agency)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Buildrs",
  "description": "Custom AI agents en automatisering workflows voor B2B service providers. Van LinkedIn automation tot proposal generators - we bouwen het voor je.",
  "url": "https://buildrs.nl",
  "logo": "https://buildrs.nl/logo.png",
  "sameAs": [
    "https://linkedin.com/company/buildrs"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+31-6-12345678",
    "contactType": "customer service",
    "availableLanguage": "Dutch"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "NL",
    "addressLocality": "Amsterdam"
  },
  "service": [
    {
      "@type": "Service",
      "name": "Custom AI Agents",
      "description": "Maatwerk AI workflows zoals LinkedIn automation, proposal generators en lead processing agents"
    },
    {
      "@type": "Service", 
      "name": "Platform Integration",
      "description": "Integreer custom agents in ons Buildrs platform voor betere dashboards en monitoring"
    },
    {
      "@type": "Service",
      "name": "Standalone Solutions",
      "description": "Volledig eigenaarschap van je agent - draai het via Google Sheets, Airtable of eigen stack"
    }
  ]
};
---

<Layout 
  title="Buildrs | AI Software, Marketing & Sales Tools"
  description="We bouwen custom AI agents voor B2B bedrijven. LinkedIn automation, proposal generators, lead processing - standalone of geÃ¯ntegreerd in ons platform. Klaar in 1-2 weken."
  keywords="custom AI agents, marketing automation, LinkedIn automation, workflow automation, AI ontwikkeling, B2B automatisering, proposal generator, Netherlands"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC and ensure instant hero visibility -->
  <style>
    
    /* Ensure page starts with true black background */
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
    }
    
    /* Ensure no spacing anywhere that could create black canvas */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    /* Force hero to start at very top */
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    /* Critical hero styles for instant rendering */
    .hero-section {
      position: relative;
      min-height: 90vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 25vh 1rem 3rem;
    }
    
    /* Prevent any layout shift */
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black">
    <!-- Agency Hero section -->
    <HomeHero client:load />
    
    <!-- Platform Section -->
    <PlatformSection client:visible />
    
    <!-- Diensten Section -->
    <DienstenSection client:visible />
    
    <!-- Use Case Section -->
    <UseCaseSection client:visible />
    
    <!-- Founders Section -->
    <FoundersSection client:visible />
    
    <!-- AI Agents Section -->
    <AIAgentsSection client:visible />
    
    <!-- What is Buildrs Section -->
    <WhatIsBuildrsSection client:visible />
    
    <!-- Apple Style Transition - Capabilities -->
    <AppleStyleTransition variant="capabilities" client:visible />
    
    <!-- Features Section -->
    <FeaturesSection client:visible />
    
    <!-- Process & Development Methodology Section -->
    <ProcessSection client:visible />
    
    <!-- Apple Style Transition - Platform -->
    <AppleStyleTransition variant="platform" client:visible />
    <!-- Platform Comparison Section -->
    <PlatformComparisonSection client:visible />
    
    <!-- FAQ Section -->
    <HomeFAQSection client:visible />
    
    <!-- Final CTA Section -->
    <HomeFinalCTASection client:visible />
    
    <!-- Footer -->
    <ScailUpFooter client:visible />
  </main>

</Layout>

