---
import Layout from '../layouts/Layout.astro';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';
// Hero back to React for interactivity
import HomeHero from '../components/active/agency/HomeHero';
// Astro-first components
import Platform from '../components/sections/Platform.astro';
import SalesEngineSection from '../components/active/agency/SalesEngineSection';
import MarketingEngineSection from '../components/active/agency/MarketingEngineSection';
// React components for interactive features
import UseCaseSection from '../components/active/agency/UseCaseSection';
import PartnershipSection from '../components/active/agency/PartnershipSection';
import FoundersSection from '../components/active/agency/CEOSection';
import HomeFinalCTASection from '../components/active/agency/HomeFinalCTASection';
import IntegrationsShowcase from '../components/active/agency/IntegrationsShowcase';
// Interactive headline component
import HomeAnimatedHeadline from '../components/active/agency/HomeAnimatedHeadline';
// Simplified: remove custom performance managers

// Main landing page structured data (moved from agency)
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Buildrs",
  "description": "Custom AI agents en automatisering workflows voor B2B service providers. Van LinkedIn automation tot proposal generators - we bouwen het voor je.",
  "url": "https://buildrs.nl",
  "logo": "https://buildrs.nl/logo.png",
  "sameAs": [
    "https://linkedin.com/company/buildrs"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+31-6-12345678",
    "contactType": "customer service",
    "availableLanguage": "Dutch"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "NL",
    "addressLocality": "Amsterdam"
  },
  "service": [
    {
      "@type": "Service",
      "name": "Custom AI Agents",
      "description": "Maatwerk AI workflows zoals LinkedIn automation, proposal generators en lead processing agents"
    },
    {
      "@type": "Service", 
      "name": "Platform Integration",
      "description": "Integreer custom agents in ons Buildrs platform voor betere dashboards en monitoring"
    },
    {
      "@type": "Service",
      "name": "Standalone Solutions",
      "description": "Volledig eigenaarschap van je agent - draai het via Google Sheets, Airtable of eigen stack"
    }
  ]
};
---

<Layout 
  title="Buildrs | AI Software, Marketing & Sales Tools"
  description="We bouwen custom AI agents voor B2B bedrijven. LinkedIn automation, proposal generators, lead processing - standalone of geÃ¯ntegreerd in ons platform. Klaar in 1-2 weken."
  keywords="custom AI agents, marketing automation, LinkedIn automation, workflow automation, AI ontwikkeling, B2B automatisering, proposal generator, Netherlands"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Clean CSS for professional loading -->
  <style>
    /* Minimal essential styling */
    #main-content {
      background-color: #000000;
      min-height: 100vh;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black">
    <!-- React Hero with immediate idle hydration for smoother loading -->
    <HomeHero client:idle />

    <!-- Server-rendered Platform section -->
    <Platform />

    <!-- Already optimized Astro sections -->
    <SalesEngineSection />
    <MarketingEngineSection />

    <!-- Anti-unload hydration - early sections always mounted -->
    <UseCaseSection client:load />
    <PartnershipSection client:load />
    <!-- Later sections can use idle without scroll impact -->
    <IntegrationsShowcase client:idle />
    <FoundersSection client:idle />
    <HomeFinalCTASection client:idle />
    <ScailUpFooter client:idle />
  </main>

</Layout>

