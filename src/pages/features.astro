---
import Layout from '../layouts/Layout.astro';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';
import FeaturesSection from '../components/active/agency/FeaturesSection';

// Features page structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Buildrs AI Agent Features",
  "description": "Overzicht van alle AI agents en automatisering features die Buildrs biedt voor B2B service providers",
  "provider": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.nl"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "AI Agent Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Speed to Lead - Inbound Lead Agent",
          "description": "Automatische lead opvolging binnen minuten met gepersonaliseerde berichten"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Seal The Deal - Smart Deal Agent",
          "description": "Automatische proposal en contract generatie na salesgesprekken"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "Onboard & Beyond - Seamless Onboarding Agent",
          "description": "Geautomatiseerde klant onboarding met persoonlijke welkomstpakketten"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Connect & Convert - LinkedIn Outreach Agent", 
          "description": "AI-gestuurde LinkedIn prospectie en outreach automatisering"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Custom Solutions - Maatwerk AI Agent",
          "description": "Volledig op maat gemaakte AI agents en workflow automatisering"
        }
      }
    ]
  }
};
---

<Layout 
  title="Features | AI Agents & Automatisering | Buildrs"
  description="Ontdek alle AI agents van Buildrs: Speed to Lead, Seal The Deal, LinkedIn automation en meer. Van lead opvolging tot deal closing - alles geautomatiseerd."
  keywords="AI agents, lead automation, sales automation, LinkedIn outreach, proposal generator, onboarding automation, custom AI workflows"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC -->
  <style>
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    .hero-section {
      position: relative;
      min-height: 60vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 8rem 1rem 4rem;
    }
    
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black">
    <!-- Hero Section -->
    <section class="hero-section">
      <!-- Ambient Background -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 left-1/5 w-96 h-64 rounded-full blur-3xl opacity-30" 
             style="background: radial-gradient(ellipse 400px 200px, rgba(96, 165, 250, 0.4) 0%, transparent 60%)" />
        <div class="absolute top-1/3 right-1/5 w-80 h-48 rounded-full blur-3xl opacity-25" 
             style="background: radial-gradient(ellipse 350px 150px, rgba(244, 114, 182, 0.4) 0%, transparent 80%)" />
        <div class="absolute bottom-1/4 left-1/3 w-[500px] h-[300px] rounded-full blur-3xl opacity-20" 
             style="background: radial-gradient(ellipse 500px 300px, rgba(139, 92, 246, 0.3) 0%, transparent 85%)" />
      </div>

      <div class="hero-content">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-light text-white leading-tight mb-6" 
            style="font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, Helvetica Neue, Arial, sans-serif">
          <span class="block font-normal text-white/90">AI Agents die jouw</span>
          <span class="block font-bold bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
            business transformeren
          </span>
        </h1>
        
        <p class="text-lg sm:text-xl lg:text-2xl text-white/80 font-light max-w-4xl mx-auto leading-relaxed mb-8">
          Van lead opvolging tot deal closing, van LinkedIn automation tot custom workflows. 
          Ontdek alle AI agents die we voor je kunnen bouwen.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6">
          <a href="#agency-diensten" 
             class="inline-flex items-center px-6 py-3 text-white font-medium rounded-full bg-gradient-to-r from-blue-500 to-blue-400 hover:from-blue-600 hover:to-blue-500 transition-all duration-200 text-lg">
            <span class="mr-2">Bekijk alle features</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </a>
          
          <a href="/contact" 
             class="inline-flex items-center px-6 py-3 text-white/90 font-medium rounded-full border border-white/20 hover:border-white/40 backdrop-blur-sm hover:bg-white/10 transition-all duration-200 text-lg">
            <span class="mr-2">Plan strategiesessie</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>
    
    <!-- Features Section -->
    <FeaturesSection client:load />
    
    <!-- Footer -->
    <ScailUpFooter client:load />
  </main>

</Layout>