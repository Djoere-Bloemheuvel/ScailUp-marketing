---
import Layout from '../../layouts/Layout.astro';
import OnboardAndBeyondHero from '../../components/OnboardAndBeyondHero';
import OnboardAndBeyondContentSection from '../../components/OnboardAndBeyondContentSection';

// Onboard and Beyond structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Onboard and Beyond - Client Success Agent",
  "provider": {
    "@type": "Organization",
    "name": "ScailUp",
    "url": "https://scailup.nl",
    "logo": "https://scailup.nl/logo.png"
  },
  "description": "Met Onboard and Beyond zorg je ervoor dat nieuwe klanten succesvol worden geïmplementeerd en tevreden blijven. Verhoog je klanttevredenheid en verlaag churn met geautomatiseerde onboarding en proactieve support.",
  "areaServed": "Netherlands",
  "serviceType": "Client Success Automation",
  "category": "Business Process Automation",
  "offers": [
    {
      "@type": "Offer",
      "name": "Onboard and Beyond Automation",
      "description": "Geautomatiseerde klant onboarding en success management voor hogere tevredenheid",
      "price": "Custom pricing",
      "availability": "https://schema.org/InStock"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Onboard and Beyond Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Geautomatiseerde Onboarding",
          "description": "Stap-voor-stap begeleiding van nieuwe klanten"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Proactieve Support",
          "description": "Voorkom problemen voordat ze ontstaan"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Customer Success Tracking",
          "description": "Monitor klantsucces en tevredenheid realtime"
        }
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "156",
    "bestRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      },
      "author": {
        "@type": "Person",
        "name": "Customer Success Manager"
      },
      "reviewBody": "Onboard and Beyond heeft onze klanttevredenheid met 40% verhoogd. Klanten voelen zich nu echt ondersteund vanaf dag één."
    }
  ]
};
---

<Layout 
  title="Onboard and Beyond | Geautomatiseerde klant onboarding en success"
  description="Verhoog klanttevredenheid met 40% door nieuwe klanten perfect te onboarden en proactief te ondersteunen. Onboard and Beyond automatiseert je hele customer success proces."
  keywords="klant onboarding automatisering, customer success automation, client onboarding systeem, klant tevredenheid verhogen, churn verlagen, geautomatiseerde support, customer journey automation, client success agent, proactieve klantondersteuning, B2B onboarding Nederland"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC and ensure instant hero visibility -->
  <style>
    
    /* Ensure page starts with true black background */
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    /* Ensure no spacing anywhere that could create black canvas */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    /* Force hero to start at very top */
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    /* Critical hero styles for instant rendering */
    .hero-section {
      position: relative;
      min-height: 90vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 25vh 1rem 3rem;
    }
    
    /* Prevent any layout shift */
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black max-w-full overflow-x-hidden">
    <!-- Onboard and Beyond Hero section -->
    <OnboardAndBeyondHero client:load />
    
    <!-- Onboard and Beyond Content Sections -->
    <OnboardAndBeyondContentSection client:visible />
  </main>

</Layout>