---
import Layout from '../../layouts/Layout.astro';
import SealTheDealHero from '../../components/SealTheDealHero';
import SealTheDealContentSection from '../../components/SealTheDealContentSection';

// Seal the Deal structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Seal the Deal - Smart Deal Agent",
  "provider": {
    "@type": "Organization",
    "name": "ScailUp",
    "url": "https://scailup.nl",
    "logo": "https://scailup.nl/logo.png"
  },
  "description": "Met Seal the Deal stuur je direct na je salescall een professioneel document met voorstel, contract en betaallink. 65% sneller closen, ROI binnen 2-4 maanden.",
  "areaServed": "Netherlands",
  "serviceType": "Sales Automation",
  "category": "Business Process Automation",
  "offers": [
    {
      "@type": "Offer",
      "name": "Seal the Deal Automation",
      "description": "Automatische proposal en contract generatie direct na salescalls met 65% sneller closen",
      "price": "Custom pricing",
      "availability": "https://schema.org/InStock"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Seal the Deal Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Automatische Proposal Generatie",
          "description": "Binnen minuten na salescall compleet voorstel met contract"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "CRM Integratie",
          "description": "Volledig geautomatiseerde sync en deal tracking"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Smart Follow-up System",
          "description": "AI-gedreven opvolging en deal management"
        }
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "94",
    "bestRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      },
      "author": {
        "@type": "Person",
        "name": "Sales Director B2B"
      },
      "reviewBody": "Seal the Deal heeft onze closing rate met 65% verhoogd. We sluiten deals nu binnen dagen in plaats van weken."
    }
  ]
};
---

<Layout 
  title="Seal the Deal | Direct contract en voorstel na salescall met AI"
  description="Sluit deals 65% sneller door direct na je salescall een professioneel voorstel met contract en betaallink te sturen. Seal the Deal genereert alles automatisch, houdt leads warm en integreert met je CRM."
  keywords="seal the deal automatisering, sales proposal automation, contract generatie AI, automatische voorstellen, deal closing automation, sales follow-up systeem, CRM automatisering, sneller deals sluiten, proposal building automation, B2B sales automation Nederland"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC and ensure instant hero visibility -->
  <style>
    
    /* Ensure page starts with true black background */
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    /* Ensure no spacing anywhere that could create black canvas */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    /* Force hero to start at very top */
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    /* Critical hero styles for instant rendering */
    .hero-section {
      position: relative;
      min-height: 90vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 25vh 1rem 3rem;
    }
    
    /* Prevent any layout shift */
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black max-w-full overflow-x-hidden">
    <!-- Seal the Deal Hero section -->
    <SealTheDealHero client:load />
    
    <!-- Seal the Deal Content Sections -->
    <SealTheDealContentSection client:visible />
  </main>

</Layout>