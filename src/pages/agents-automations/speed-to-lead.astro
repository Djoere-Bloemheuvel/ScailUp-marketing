---
import Layout from '../../layouts/Layout.astro';
import SpeedToLeadHero from '../../components/SpeedToLeadHero';
import SpeedToLeadContentSection from '../../components/SpeedToLeadContentSection';

// Speed to Lead structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Speed to Lead - Inbound Lead Agent",
  "provider": {
    "@type": "Organization",
    "name": "ScailUp",
    "url": "https://scailup.nl",
    "logo": "https://scailup.nl/logo.png"
  },
  "description": "Met Speed to Lead reageer je binnen minuten op nieuwe leads met een persoonlijk bericht, precies wanneer ze nog warm zijn. 391% meer conversie, ROI binnen 1-3 maanden.",
  "areaServed": "Netherlands",
  "serviceType": "Lead Management Automation",
  "category": "Business Process Automation",
  "offers": [
    {
      "@type": "Offer",
      "name": "Speed to Lead Automation",
      "description": "Automatische lead-opvolging binnen minuten met 391% meer conversie",
      "price": "Custom pricing",
      "availability": "https://schema.org/InStock"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Speed to Lead Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Automatische Lead Response",
          "description": "Binnen 2 minuten reactie op nieuwe leads"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "CRM Integratie",
          "description": "Volledig geautomatiseerde CRM-sync en lead tracking"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Lead Intelligence",
          "description": "Automatische bedrijfs- en achtergrondanalyse van nieuwe leads"
        }
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "127",
    "bestRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      },
      "author": {
        "@type": "Person",
        "name": "Marketing Director B2B"
      },
      "reviewBody": "Speed to Lead heeft onze conversie met 391% verhoogd. We missen geen enkele lead meer en reageren altijd binnen minuten."
    }
  ]
};
---

<Layout 
  title="Speed to Lead | Directe inbound lead opvolging met AI"
  description="Vergroot je conversiekans met 391% door binnen seconden op nieuwe inbound leads te reageren. Speed to Lead stuurt automatisch een persoonlijk bericht, doet research en koppelt alles aan je CRM."
  keywords="speed to lead automatisering, lead response automation, inbound lead agent, automatische lead opvolging, lead management systeem, CRM automatisering, lead conversie verhogen, snelle lead reactie, lead nurturing automation, B2B lead automation Nederland"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC and ensure instant hero visibility -->
  <style>
    
    /* Ensure page starts with true black background */
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    /* Ensure no spacing anywhere that could create black canvas */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    /* Force hero to start at very top */
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    /* Critical hero styles for instant rendering */
    .hero-section {
      position: relative;
      min-height: 90vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 25vh 1rem 3rem;
    }
    
    /* Prevent any layout shift */
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black max-w-full overflow-x-hidden">
    <!-- Speed to Lead Hero section -->
    <SpeedToLeadHero client:load />
    
    <!-- Speed to Lead Content Sections -->
    <SpeedToLeadContentSection client:visible />
  </main>

</Layout>