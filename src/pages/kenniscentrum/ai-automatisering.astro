---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ScrollHeader from '../../components/active/shared/ScrollHeader';
import { ArrowRight } from 'lucide-react';

// Get pillar data
const allPillars = await getCollection('pillars');
const pillar = allPillars.find(p => p.data.pillarId === 'ai-automatisering');

// Get clusters for this pillar
const allClusters = await getCollection('clusters');
const pillarClusters = allClusters
  .filter(cluster => cluster.data.pillar === 'ai-automatisering')
  .sort((a, b) => a.data.order - b.data.order);

// Get articles for this pillar
const allArtikelen = await getCollection('artikelen');
const pillarArtikelen = allArtikelen
  .filter(artikel => artikel.data.pillar === 'ai-automatisering')
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

const featuredArtikelen = pillarArtikelen.filter(a => a.data.featured).slice(0, 3);
