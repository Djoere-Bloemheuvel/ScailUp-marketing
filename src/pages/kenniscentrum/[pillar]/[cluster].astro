---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import ScrollHeader from '../../../components/active/shared/ScrollHeader';
import { ArrowLeft, BookOpen, Clock, Users } from 'lucide-react';

export async function getStaticPaths() {
  const clusters = await getCollection('clusters');
  const pillars = await getCollection('pillars');
  const articles = await getCollection('artikelen');

  return clusters.map((cluster) => {
    const pillar = pillars.find(p => p.data.pillarId === cluster.data.pillar);
    const clusterArticles = articles.filter(article => 
      article.data.pillar === cluster.data.pillar && 
      article.data.cluster === cluster.data.clusterId
    );

    return {
      params: { 
        pillar: cluster.data.pillar, 
        cluster: cluster.data.clusterId 
      },
      props: { 
        cluster, 
        pillar,
        articles: clusterArticles
      }
    };
  });
}

const { cluster, pillar, articles } = Astro.props;
const { Content } = await cluster.render();

// Calculate total reading time
const totalReadingTime = articles.reduce((total, article) => 
  total + (article.data.readingTime || 5), 0
);
---

<Layout 
  title={`${cluster.data.title} | ${pillar?.data.title || 'Kenniscentrum'} | Buildrs.AI`}
  description={cluster.data.description}
  keywords={cluster.data.seo?.keywords?.join(', ')}
>
  <ScrollHeader client:load />

  <main class="bg-black text-white min-h-screen">
    
    <!-- Breadcrumb Navigation -->
    <section class="pt-24 pb-8 px-4 sm:px-6 border-b border-gray-800">
      <div class="max-w-4xl mx-auto">
        <nav class="flex items-center gap-2 text-sm text-gray-400 mb-6">
          <a href="/kenniscentrum" class="hover:text-white transition-colors">Kenniscentrum</a>
          <span>/</span>
          <a href={`/kenniscentrum/${pillar?.data.pillarId}`} class="hover:text-white transition-colors">
            {pillar?.data.title}
          </a>
          <span>/</span>
          <span class="text-white">{cluster.data.title}</span>
        </nav>

        <div class="flex items-center gap-4 mb-4">
          <a 
            href={`/kenniscentrum/${pillar?.data.pillarId}`}
            class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
          >
            <ArrowLeft class="w-4 h-4" />
            Terug naar {pillar?.data.title}
          </a>
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 text-white">
          {cluster.data.title}
        </h1>
        
        <p class="text-lg sm:text-xl text-gray-300 mb-6 max-w-3xl">
          {cluster.data.description}
        </p>

        <!-- Cluster Stats -->
        <div class="flex flex-wrap items-center gap-6 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <BookOpen class="w-4 h-4" />
            <span>{articles.length} artikel{articles.length !== 1 ? 'en' : ''}</span>
          </div>
          <div class="flex items-center gap-2">
            <Clock class="w-4 h-4" />
            <span>{totalReadingTime} min leestijd</span>
          </div>
          <div class="flex items-center gap-2">
            <Users class="w-4 h-4" />
            <span>Alle niveaus</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Cluster Content -->
    <section class="py-12 px-4 sm:px-6">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-invert prose-lg max-w-none">
          <Content />
        </div>
      </div>
    </section>

    <!-- Articles in this Cluster -->
    {articles.length > 0 && (
      <section class="py-12 px-4 sm:px-6 border-t border-gray-800">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-bold mb-8 text-white">
            Artikelen in deze cluster
          </h2>
          
          <div class="grid gap-6">
            {articles.map((article) => {
              const formatDate = (date) => {
                return new Date(date).toLocaleDateString('nl-NL', { 
                  day: 'numeric', 
                  month: 'long',
                  year: 'numeric'
                });
              };
              
              return (
                <a 
                  href={`/kenniscentrum/${article.slug}`}
                  class="group block border border-gray-800 rounded-lg p-6 hover:border-gray-700 transition-all duration-300"
                >
                  <article>
                    <div class="flex flex-col sm:flex-row sm:items-start gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-3">
                          <span class="text-xs text-gray-500 font-medium px-2 py-1 bg-gray-800/50 rounded">
                            {article.data.category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
                          </span>
                          <span class="text-xs text-gray-500">
                            {formatDate(article.data.publishDate)}
                          </span>
                          {article.data.readingTime && (
                            <span class="text-xs text-gray-500">
                              {article.data.readingTime} min read
                            </span>
                          )}
                        </div>
                        
                        <h3 class="text-lg font-semibold mb-2 text-white group-hover:text-gray-200 transition-colors">
                          {article.data.title}
                        </h3>
                        
                        <p class="text-gray-400 text-sm group-hover:text-gray-300 transition-colors line-clamp-2">
                          {article.data.description}
                        </p>
                        
                        <div class="flex items-center gap-2 mt-3">
                          {article.data.tags.slice(0, 3).map(tag => (
                            <span class="text-xs px-2 py-1 bg-gray-800/30 text-gray-400 rounded">
                              {tag}
                            </span>
                          ))}
                        </div>
                      </div>
                    </div>
                  </article>
                </a>
              );
            })}
          </div>
        </div>
      </section>
    )}

    <!-- Related Clusters -->
    <section class="py-12 px-4 sm:px-6 border-t border-gray-800">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-6 text-white">
          Andere clusters in {pillar?.data.title}
        </h2>
        <p class="text-gray-400 mb-8">
          Ontdek meer onderwerpen binnen dit expertisegebied
        </p>
        
        <div class="text-center">
          <a 
            href={`/kenniscentrum/${pillar?.data.pillarId}`}
            class="inline-flex items-center gap-2 px-6 py-3 bg-white text-black font-medium rounded-lg hover:bg-gray-200 transition-colors"
          >
            Bekijk alle clusters
            <ArrowLeft class="w-4 h-4 rotate-180" />
          </a>
        </div>
      </div>
    </section>

  </main>
</Layout>