---
import Layout from '../layouts/Layout.astro';
import SaasHero from '../components/active/usecase/saas/SaasHero';
import SaasServicesSection from '../components/active/usecase/saas/SaasServicesSection';
import SaasFinalCTA from '../components/active/usecase/saas/SaasFinalCTA';
import SaasLeadForm from '../components/SaasLeadForm.astro';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';

// Structured data for B2B SaaS page
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Lead Generatie voor SaaS Bedrijven",
  "description": "Schaalt jouw SaaS bedrijf naar 400% meer gekwalificeerde leads met geautomatiseerde email outbound en LinkedIn automation.",
  "provider": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.ai"
  },
  "serviceType": "Lead Generation Automation",
  "areaServed": "Netherlands",
  "audience": {
    "@type": "Audience",
    "audienceType": "SaaS Companies"
  }
};
---

<Layout 
  title="SaaS Lead Generatie | Buildrs - 400% Meer Leads"
  description="Schaalt jouw SaaS bedrijf naar 400% meer gekwalificeerde leads. Email outbound automation, LinkedIn lead generatie en AI agents voor SaaS bedrijven."
  keywords="SaaS lead generatie, email automation SaaS, LinkedIn automation SaaS, lead generation tools, SaaS marketing automation Netherlands"
  structuredData={structuredData}
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <main class="min-h-screen bg-black text-white" style="background-color: #000000 !important;">
    <!-- Instant loading state -->
    <div class="fixed inset-0 bg-black z-0" style="background-color: #000000 !important;"></div>
    
    <!-- Hero Section - prioritize loading -->
    <SaasHero client:load />
    
    <!-- Services Section - load when visible to reduce initial load -->
    <SaasServicesSection client:visible />
    
    <!-- Premium Lead Form Section -->
    <SaasLeadForm 
      formTitle="Klaar voor 2-4x meer leads?"
      formDescription="Vul je gegevens in en ontdek hoe we jouw SaaS bedrijf kunnen helpen groeien met geautomatiseerde lead generatie."
      submitText="Laten we praten"
    />
    
    <!-- Footer -->
    <ScailUpFooter client:idle />
  </main>
</Layout>