        </div>

        <!-- Duplicate Gradient Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 mb-12 sm:mb-16">
          {sortedPillars.map((pillar, index) => {
            const iconEmoji = pillarIcons[pillar.data.pillarId];
            const formatDate = () => {
              const dates = ['Jul 10', 'May 20', 'Jun 25', 'Apr 15', 'Mar 8', 'Feb 12'];
              return dates[index % dates.length];
            };
            const isAIAutomatisering = pillar.data.pillarId === 'ai-automatisering';
            const isAIMarketing = pillar.data.pillarId === 'ai-marketing';
            const isAISales = pillar.data.pillarId === 'ai-sales';
            
            let articleClasses, contentClasses;
            
            if (isAIAutomatisering) {
