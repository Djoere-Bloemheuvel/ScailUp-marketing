            } else {
              articleClasses = 'border border-gray-800 rounded-lg hover:border-gray-700 transition-colors duration-200 h-full';
              contentClasses = 'p-8 h-full';
            }
            
            return (
              <a href={`/kenniscentrum/${pillar.data.pillarId}`} class="group block transform transition-transform duration-300 hover:scale-[1.02]" id={`${pillar.data.pillarId}-bottom`}>
