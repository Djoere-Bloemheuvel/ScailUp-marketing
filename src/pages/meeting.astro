---
import Layout from '../layouts/Layout.astro';
import GoogleTimeSlotPicker from '../components/active/meeting/GoogleTimeSlotPicker';
import ScrollHeader from '../components/active/shared/ScrollHeader';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';

// Meeting page structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": "Buildrs Strategy Meeting",
  "description": "Plan een gesprek met Buildrs om te ontdekken hoe wij jouw business kunnen versterken met AI automation en custom workflows.",
  "organizer": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.nl"
  },
  "location": {
    "@type": "VirtualLocation",
    "url": "https://buildrs.nl/meeting"
  },
  "eventAttendanceMode": "https://schema.org/OnlineEventAttendanceMode",
  "eventStatus": "https://schema.org/EventScheduled"
};
---

<Layout 
  title="Plan een gesprek - Buildrs"
  description="Plan een strategisch gesprek met Buildrs. Ontdek hoe wij jouw business kunnen versterken met AI automation, custom workflows en growth marketing."
  keywords="meeting booking, strategy call, AI consultation, business automation, Buildrs meeting, Google Calendar integration"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Header -->
  <ScrollHeader client:load />

  <!-- Meeting booking styles -->
  <style>
    /* Premium meeting page styling */
    #main-content {
      background-color: #000000;
      min-height: 100vh;
    }
    
    /* Ambient background effects */
    .meeting-ambient {
      position: absolute;
      inset: 0;
      overflow: hidden;
      z-index: 0;
    }
    
    .meeting-glow {
      position: absolute;
      border-radius: 50%;
      filter: blur(100px);
      opacity: 0.4;
      mix-blend-mode: screen;
    }
    
    .meeting-glow-1 {
      top: 10%;
      left: 15%;
      width: 400px;
      height: 400px;
      background: radial-gradient(ellipse, rgba(59, 130, 246, 0.6) 0%, transparent 70%);
    }
    
    .meeting-glow-2 {
      top: 40%;
      right: 20%;
      width: 300px;
      height: 300px;
      background: radial-gradient(ellipse, rgba(147, 51, 234, 0.5) 0%, transparent 70%);
    }
    
    .meeting-glow-3 {
      bottom: 20%;
      left: 25%;
      width: 350px;
      height: 350px;
      background: radial-gradient(ellipse, rgba(236, 72, 153, 0.4) 0%, transparent 70%);
    }
    
    /* Grid pattern */
    .meeting-grid {
      position: absolute;
      inset: 0;
      opacity: 0.05;
      background-image: 
        linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
      background-size: 50px 50px;
    }
  </style>

  <main id="main-content" role="main" class="relative min-h-screen bg-black">
    
    <!-- Ambient Background -->
    <div class="meeting-ambient">
      <!-- Gradient glows -->
      <div class="meeting-glow meeting-glow-1"></div>
      <div class="meeting-glow meeting-glow-2"></div>
      <div class="meeting-glow meeting-glow-3"></div>
      
      <!-- Grid pattern -->
      <div class="meeting-grid"></div>
      
      <!-- Floating particles -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {Array.from({ length: 20 }).map((_, i) => (
          <div
            key={i}
            class="absolute w-1 h-1 bg-white/20 rounded-full opacity-30"
            style={`
              left: ${Math.random() * 100}%;
              top: ${Math.random() * 100}%;
              animation: float ${8 + Math.random() * 4}s infinite ease-in-out;
              animation-delay: ${Math.random() * 5}s;
            `}
          />
        ))}
      </div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10 pt-32 pb-20">
      <div class="max-w-7xl mx-auto px-6">
        
        <!-- Page Header -->
        <div class="text-center mb-16">
          <h1 
            class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-6 leading-tight"
            style="font-family: 'Neue Haas Grotesk Display Pro', 'Helvetica Neue', 'Arial Nova', -apple-system, BlinkMacSystemFont, system-ui, sans-serif; letter-spacing: -0.02em;"
          >
            <div style="font-weight: 300;">
              Laten we jouw business
            </div>
            <div style="font-weight: 400;">
              naar het volgende level tillen.
            </div>
          </h1>
          
          <p 
            class="text-xl md:text-2xl text-gray-300 font-light max-w-3xl mx-auto leading-relaxed"
            style="font-family: 'Neue Haas Grotesk Display Pro', 'Helvetica Neue', 'Arial Nova', -apple-system, BlinkMacSystemFont, system-ui, sans-serif; font-weight: 200;"
          >
            In een strategisch gesprek ontdekken we samen hoe AI automation 
            jouw groei kan versnellen en processen kan optimaliseren.
          </p>
        </div>

        <!-- Value Propositions -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="text-center p-6 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl">
            <div class="w-12 h-12 bg-blue-600/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-white font-medium text-lg mb-2">Gratis Strategiesessie</h3>
            <p class="text-gray-400 text-sm">30 minuten focustijd om jouw uitdagingen en kansen te bespreken.</p>
          </div>
          
          <div class="text-center p-6 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl">
            <div class="w-12 h-12 bg-purple-600/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-white font-medium text-lg mb-2">Direct Actieplan</h3>
            <p class="text-gray-400 text-sm">Concrete stappen die je vandaag nog kunt nemen voor meer efficiency.</p>
          </div>
          
          <div class="text-center p-6 bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl">
            <div class="w-12 h-12 bg-pink-600/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
              </svg>
            </div>
            <h3 class="text-white font-medium text-lg mb-2">Maatwerk Advies</h3>
            <p class="text-gray-400 text-sm">Persoonlijke aanbevelingen gebaseerd op jouw specifieke situatie.</p>
          </div>
        </div>

        <!-- Google Calendar Time Slot Picker Component -->
        <GoogleTimeSlotPicker client:load />

        <!-- Bottom Info -->
        <div class="text-center mt-16 max-w-2xl mx-auto">
          <div class="bg-gray-900/30 border border-gray-700/50 rounded-xl p-6">
            <h3 class="text-white font-medium text-lg mb-3">Wat kun je verwachten?</h3>
            <div class="space-y-3 text-left">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                <p class="text-gray-300 text-sm">
                  <strong class="text-white">Analyse van jouw huidige processen</strong> - 
                  We kijken samen waar tijd en energie verloren gaat
                </p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                <p class="text-gray-300 text-sm">
                  <strong class="text-white">AI-kansen identificeren</strong> - 
                  Ontdek welke taken geautomatiseerd kunnen worden
                </p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                <p class="text-gray-300 text-sm">
                  <strong class="text-white">Concrete roadmap</strong> - 
                  Stapsgewijze aanpak voor implementatie
                </p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

  </main>

  <!-- Footer -->
  <ScailUpFooter client:idle />

  <!-- Floating animation styles -->
  <style>
    @keyframes float {
      0%, 100% {
        transform: translateY(0px) rotate(0deg);
        opacity: 0.3;
      }
      50% {
        transform: translateY(-20px) rotate(180deg);
        opacity: 0.8;
      }
    }
  </style>

</Layout>