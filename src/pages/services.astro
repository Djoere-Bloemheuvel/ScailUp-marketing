---
import Layout from '../layouts/Layout.astro';
import ScailUpFooter from '../components/active/shared/ScailUpFooter';
import ServicesHero from '../components/active/agency/ServicesHero';
import ServicesAccordion from '../components/active/agency/ServicesAccordion';

// Services page structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Services - Buildrs",
  "description": "Custom AI agents, automatisering workflows en platform development voor B2B service providers. Van LinkedIn automation tot marketing engines - we bouwen het voor je.",
  "url": "https://buildrs.nl/services",
  "mainEntity": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.nl",
    "service": [
      {
        "@type": "Service",
        "name": "AI Agents & Automatisering",
        "description": "Custom LinkedIn agents, proposal generators, lead processing workflows"
      },
      {
        "@type": "Service",
        "name": "Platform Development", 
        "description": "Lead Engine, Marketing Engine, CRM modules en custom workflow development"
      },
      {
        "@type": "Service",
        "name": "Web Development",
        "description": "Modern web applications, AI-powered interfaces, performance optimization"
      },
      {
        "@type": "Service",
        "name": "Digital Marketing",
        "description": "AI content generation, marketing automation, analytics & reporting"
      }
    ]
  }
};
---

<Layout 
  title="Services - Buildrs | AI Agents & Automatisering" 
  description="Custom AI agents, automatisering workflows en platform development voor B2B service providers. Van LinkedIn automation tot marketing engines - we bouwen het voor je."
  keywords="ai agents, automatisering, linkedin automation, proposal generator, lead engine, marketing automation, custom workflows"
  structuredData={structuredData}
>
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Clean CSS for professional loading -->
  <style>
    /* Minimal essential styling */
    #main-content {
      background-color: #000000;
      min-height: 100vh;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black">
    <!-- Services Hero Section -->
    <ServicesHero client:load />

    <!-- Services Accordion Section -->
    <ServicesAccordion client:load />

    <!-- Footer -->
    <ScailUpFooter client:load />
  </main>
</Layout>