---
import Layout from '../layouts/Layout.astro';
import SalesEngineHero from '../components/SalesEngineHero';
import SalesEngineFeatures from '../components/SalesEngineFeatures';

// Buildrs Sales Engine structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Sales Engine | Buildrs",
  "description": "Volledige AI-gedreven sales automatisering. Van prospect tot klant op de automatische piloot. Plug & Play agents die je salesproces volledig automatiseren.",
  "provider": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.nl"
  },
  "url": "https://buildrs.nl/sales-engine",
  "areaServed": "Netherlands",
  "serviceType": "Sales Process Automation",
  "offers": [
    {
      "@type": "Offer",
      "name": "Lead Qualification Agent",
      "description": "AI agent die leads automatisch kwalificeert en scoring toepast"
    },
    {
      "@type": "Offer", 
      "name": "Sales Follow-up Agent",
      "description": "Geautomatiseerde follow-up sequenties die prospects warm houden"
    },
    {
      "@type": "Offer",
      "name": "Deal Pipeline Management",
      "description": "AI-gedreven pipeline management en deal tracking"
    },
    {
      "@type": "Offer",
      "name": "CRM Integration & Automation",
      "description": "Naadloze integratie met bestaande CRM systemen"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Sales Automation Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Automated Lead Scoring",
          "description": "AI-gedreven lead kwalificatie en scoring"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Sales Pipeline Automation",
          "description": "Complete automatisering van je sales pipeline"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "CRM Intelligence",
          "description": "AI-aangedreven insights en automatisering in je CRM"
        }
      }
    ]
  }
};
---

<Layout 
  title="Sales Automation Engine | Buildrs - Complete Sales Automatisering"
  description="Volledige AI-gedreven sales automatisering. Van prospect tot klant op de automatische piloot. Plug & Play agents die je salesproces volledig automatiseren met maximale ROI."
  keywords="sales automation, AI sales agents, sales pipeline automation, CRM automation, lead scoring, sales follow-up automation, B2B sales automation, Netherlands"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC and ensure instant hero visibility -->
  <style>
    
    /* Ensure page starts with true black background */
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
    }
    
    /* Ensure no spacing anywhere that could create black canvas */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    /* Force hero to start at very top */
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    /* Critical hero styles for instant rendering */
    .hero-section {
      position: relative;
      min-height: 90vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 25vh 1rem 3rem;
    }
    
    /* Prevent any layout shift */
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black">
    <!-- Sales Engine Hero section -->
    <SalesEngineHero client:load />
    
    <!-- Sales Engine Features section -->
    <SalesEngineFeatures client:visible />
  </main>

</Layout>