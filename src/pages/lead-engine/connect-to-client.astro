---
import Layout from '../../layouts/Layout.astro';
import ConnectToClientHero from '../../components/ConnectToClientHero.tsx';
import ConnectToClientContentSection from '../../components/ConnectToClientContentSection.tsx';

// Connect to Client structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Connect to Client - LinkedIn Outreach Agent",
  "provider": {
    "@type": "Organization",
    "name": "Buildrs",
    "url": "https://buildrs.nl",
    "logo": "https://buildrs.nl/logo.png"
  },
  "description": "Van connectieverzoek naar warme klantrelatie. AI-gedreven LinkedIn outreach agent die authentieke connecties maakt en natuurlijk doorloopt tot afspraken.",
  "areaServed": "Netherlands",
  "serviceType": "LinkedIn Automation",
  "category": "Business Process Automation",
  "offers": [
    {
      "@type": "Offer",
      "name": "Connect to Client LinkedIn Agent",
      "description": "Autonome LinkedIn outreach van leadselectie tot meeting in agenda",
      "price": "Custom pricing",
      "availability": "https://schema.org/InStock"
    }
  ],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Connect to Client Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Hyperpersoonlijke Connectieverzoeken",
          "description": "AI analyseert profielen en schrijft unieke, authentieke berichten"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Multi-step Opvolgsequences",
          "description": "Gestructureerde follow-ups van connectie tot meeting"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Reply Management & Scheduling",
          "description": "AI handelt reacties af en plant automatisch afspraken"
        }
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "127",
    "bestRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "5",
        "bestRating": "5"
      },
      "author": {
        "@type": "Person",
        "name": "Business Development Manager"
      },
      "reviewBody": "Connect to Client heeft mijn LinkedIn volledig getransformeerd. Meer connecties, betere gesprekken en meetings direct in mijn agenda."
    }
  ]
};
---

<Layout 
  title="LinkedIn Outreach Automation | Buildrs - Connect to Client Agent"
  description="Van connectieverzoek naar warme klantrelatie. AI-gedreven LinkedIn outreach agent die authentieke connecties maakt en natuurlijk doorloopt tot afspraken in je agenda."
  keywords="LinkedIn outreach agent, LinkedIn automation, connectie verzoeken AI, networking automation, lead generation LinkedIn, B2B outreach automation, LinkedIn prospecting, social selling automation Nederland"
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-white text-black px-4 py-2 rounded">
    Skip to main content
  </a>

  <!-- Critical CSS to prevent FOUC and ensure instant hero visibility -->
  <style>
    
    /* Ensure page starts with true black background */
    body {
      background-color: #000000 !important;
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    html {
      margin: 0 !important;
      padding: 0 !important;
      overflow-x: hidden !important;
    }
    
    /* Ensure no spacing anywhere that could create black canvas */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    /* Force hero to start at very top */
    #main-content {
      position: relative;
      top: 0 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }
    
    /* Critical hero styles for instant rendering */
    .hero-section {
      position: relative;
      min-height: 90vh;
      background-color: #000000;
      color: #ffffff;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 25vh 1rem 3rem;
    }
    
    /* Prevent any layout shift */
    .hero-content {
      position: relative;
      max-width: 80rem;
      width: 100%;
      text-align: center;
      z-index: 30;
    }
  </style>

  <main id="main-content" role="main" class="min-h-screen bg-black max-w-full overflow-x-hidden">
    <!-- Connect to Client Hero section -->
    <ConnectToClientHero client:load />
    
    <!-- Connect to Client Content Sections -->
    <ConnectToClientContentSection client:visible />
  </main>

</Layout>