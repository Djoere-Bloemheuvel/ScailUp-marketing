      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Prospect Research & Enrichment",
          "description": "Automatische verzameling en verrijking van contactinformatie"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Hyperpersoonlijke Campagnecreatie",
          "description": "AI schrijft campagnes die aanvoelen als één-op-één communicatie"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Reply Management & Meeting Booking",
          "description": "Automatische afhandeling van reacties en directe agenda-integratie"
        }
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "89",
    "bestRating": "5"
  },
  "review": [
    {
      "@type": "Review",
      "reviewRating": {
