<script>
  // Lead Form Setup
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('leadForm') as HTMLFormElement;
    const submitButton = document.getElementById('hero-cta-button') as HTMLButtonElement;
    const submitText = document.getElementById('submitText') as HTMLElement;
    const submitArrow = document.getElementById('submitArrow') as HTMLElement;
    const loadingSpinner = document.getElementById('loadingSpinner') as HTMLElement;
    const successMessage = document.getElementById('successMessage') as HTMLElement;
    const errorMessage = document.getElementById('errorMessage') as HTMLElement;
    
    // Checkbox elements
    const consentCheckbox = document.getElementById('consent') as HTMLInputElement;
    const premiumCheckbox = document.querySelector('.premium-checkbox') as HTMLElement;

    if (!form) return;

    // Handle checkbox clicks - Enhanced sensitivity
    if (consentCheckbox && premiumCheckbox) {
      premiumCheckbox.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        consentCheckbox.checked = !consentCheckbox.checked;
        consentCheckbox.dispatchEvent(new Event('change'));
      });
      
      const checkboxContainer = premiumCheckbox.parentElement;
      if (checkboxContainer) {
        checkboxContainer.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          consentCheckbox.checked = !consentCheckbox.checked;
          consentCheckbox.dispatchEvent(new Event('change'));
        });
      }
    }

    // Email validation function
    function validateBusinessEmail(email) {
      const freeEmailProviders = ['gmail.com', 'hotmail.com', 'outlook.com', 'yahoo.com', 'icloud.com', 'aol.com'];
      const domain = email.split('@')[1]?.toLowerCase();
      return !freeEmailProviders.includes(domain);
    }

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Validate business email
      const emailInput = document.getElementById('email') as HTMLInputElement;
      if (!validateBusinessEmail(emailInput.value)) {
        errorMessage.textContent = '❌ Gebruik een zakelijk e-mailadres (geen Gmail, Hotmail, etc.)';
        errorMessage.classList.remove('hidden');
        emailInput.focus();
        return;
      }
      
      // Show loading state
      if (submitText) submitText.textContent = 'Bezig...';
      if (submitArrow) submitArrow.style.display = 'none';
      if (loadingSpinner) loadingSpinner.classList.remove('hidden');
      if (submitButton) submitButton.disabled = true;
      
      // Hide any previous messages
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');

      try {
        const formData = new FormData(form);
        
        const response = await fetch('/api/lead', {
          method: 'POST',
          body: formData
        });

        const result = await response.json();

        if (result.success) {
          // Show success message
          successMessage.classList.remove('hidden');
          
          // Reset form
          form.reset();
          
          // Reset button after delay
          setTimeout(() => {
            if (submitText) submitText.textContent = 'Bedankt voor je interesse!';
            if (loadingSpinner) loadingSpinner.classList.add('hidden');
            if (submitArrow) submitArrow.style.display = 'inline-block';
          }, 1000);
          
        } else {
          throw new Error(result.error || 'Er ging iets mis');
        }

      } catch (error) {
        console.error('Form submission error:', error);
        
        // Show error message
        errorMessage.classList.remove('hidden');
        
        // Reset button
        if (submitText) submitText.textContent = 'Probeer opnieuw';
        if (submitArrow) submitArrow.style.display = 'inline-block';
