---
import LeadFormButton from './LeadFormButton';

export interface Props {
  formTitle?: string;
  formDescription?: string;
  submitText?: string;
}

const { 
  formTitle = "Plan je strategiesessie",
  formDescription = "Ontdek hoe wij de systemen bouwen achter jouw bureau's groei.",
  submitText = "Plan gratis strategiesessie"
} = Astro.props;

---

<!-- Premium Cinematic Lead Section - Buildrs Style -->
<section 
  class="relative w-full min-h-screen flex items-center justify-center overflow-hidden"
  data-section-theme="dark"
  data-section-accent="blue"
  data-section-id="leadform"
